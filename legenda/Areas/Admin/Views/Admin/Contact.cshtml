@model legenda.Models.View.ContactVM

@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Contact</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { data_url = "/admin/admin/contact/" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FBPage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FBPage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FBPage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create" class="btn btn-default js-form-submit" />
            </div>
        </div>
    </div>
}




@using (Html.BeginForm(null, null, FormMethod.Post, new { data_url = "/admin/admin/about/" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <input name="AboutTitle" value="@ViewBag.AboutTitle" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input name="AboutDescription" value="@ViewBag.AboutDesc" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create" class="btn btn-default js-form-submit" />
            </div>
        </div>
    </div>
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
<script src="~/Areas/Content/js/send_data.js"></script>
<script>
    $('.js-form-submit').on('click', function () {
        var form = $(this).closest("form");
        var url = form.attr('data-url');
        //form.valid() &&
        if (url.trim() !== "") {
            var formData = new FormData(form.get(0));
            SendData(url, formData);
        }
    });
</script>
